<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Fragments.AddItemFragment">


        <Spinner
            android:id="@+id/productSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="8dp" />

        <EditText
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ürün Adı"/>

        <CheckBox
            android:id="@+id/isCrulety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Crulety"/>

        <Button
            android:id="@+id/addNewProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ürün Ekle"/>



        <EditText
            android:id="@+id/markaAdi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Marka Adı"/>


        <Button
            android:id="@+id/addNewItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marka Ekle"/>

    </LinearLayout>

</layout>