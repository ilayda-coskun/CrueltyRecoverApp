<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/kayitOl_linear"
    android:gravity="center"
    tools:context=".Activity.KayitOlActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textColor="@color/customColor"
        android:text="KAYIT SAYFASI"
        android:textSize="25dp"
        android:layout_marginBottom="25dp"
        ></TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        app:counterTextAppearance="@style/CounterStyle"
        app:counterEnabled="true"
        android:id="@+id/kayitOl_input_isim"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:counterMaxLength="25">

        <EditText
            android:layout_width="match_parent"
            android:hint="İsminizi Giriniz"
            android:id="@+id/kayitOl_edit_isim"
            android:textSize="17sp"
            android:inputType="textPersonName"
            android:maxLength="25"
            android:textStyle="bold"
            android:layout_height="wrap_content">

        </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        app:counterTextAppearance="@style/CounterStyle"
        android:layout_marginTop="20dp"
        app:counterEnabled="true"
        android:id="@+id/kayitOl_input_email"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:counterMaxLength="35">

        <EditText
            android:layout_width="match_parent"
            android:hint="Email Giriniz"
            android:id="@+id/kayitOl_edit_email"
            android:textSize="17sp"
            android:inputType="textEmailAddress"
            android:maxLength="35"
            android:textStyle="bold"
            android:layout_height="wrap_content">

        </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        app:counterTextAppearance="@style/CounterStyle"
        android:layout_marginTop="20dp"
        app:counterEnabled="true"
        android:id="@+id/kayitOl_input_sifre"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:counterMaxLength="20">

        <EditText
            android:layout_width="match_parent"
            android:hint="Şifre Giriniz"
            android:id="@+id/kayitOl_edit_sifre"
            android:textSize="17sp"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textStyle="bold"
            android:layout_height="wrap_content">

        </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        app:counterTextAppearance="@style/CounterStyle"
        android:layout_marginTop="20dp"
        app:counterEnabled="true"
        android:id="@+id/kayitOl_input_sifreTekrar"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:counterMaxLength="20">

        <EditText
            android:layout_width="match_parent"
            android:hint="Şifreyi Tekrar Giriniz"
            android:id="@+id/kayitOl_edit_sifreTekrar"
            android:textSize="17sp"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textStyle="bold"
            android:layout_height="wrap_content">

        </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/kayit_ol_giris_button"
        android:onClick="btnKayitOl"
        android:text="Kayıt Ol"
        android:textColor="@color/KayitOlBtnTextColor"
        android:textSize="15dp"
        android:textStyle="bold">

    </Button>

</LinearLayout>